# =============================================================================
# Payment Gateway Reconciliation System - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================
# Docker MySQL connection string (used when running in Docker)
DATABASE_URL_DOCKER=mysql+pymysql://username:password@reconciler:3306/reconciler

# Local MySQL connection string (used for local development)
DATABASE_URL_LOCAL=mysql+pymysql://username:password@localhost:3307/reconciler

# Docker MySQL settings (used by docker-compose)
DOCKER_ROOT_PASSWORD=your_root_password
DATABASE_NAME=reconciler
DATABASE_USERNAME=your_username
DATABASE_PASSWORD=your_password

# =============================================================================
# Storage Configuration
# =============================================================================
# Storage backend: 'local' or 'gcs' (Google Cloud Storage)
STORAGE_BACKEND=local

# Local storage path (relative to project root)
LOCAL_UPLOADS_PATH=uploads

# Google Cloud Storage (only needed if STORAGE_BACKEND=gcs)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GCS_BUCKET=your-bucket-name

# =============================================================================
# JWT Authentication
# =============================================================================
# Secret key for JWT token signing (minimum 32 characters)
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change-this-in-production-generate-a-secure-random-key

# Token expiration settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Super Admin Configuration
# =============================================================================
# Secret for creating super admin account (one-time use)
SUPER_ADMIN_SECRET=change-this-to-a-secure-secret

# =============================================================================
# Application Environment
# =============================================================================
# Options: development, staging, production
ENVIRONMENT=development

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# In production, minimum level is ERROR regardless of this setting
LOG_LEVEL=INFO

# Log format: text or json (json recommended for production)
LOG_FORMAT=text

# File logging
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/app.log
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5

# SQL query logging (only enable for debugging, impacts performance)
LOG_SQL_QUERIES=false
